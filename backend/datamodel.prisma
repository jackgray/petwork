enum Permission {
	ADMIN
	USER
	PETCREATE
	PETUPDATE
	PETDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String
	permissions: [Permission]
	favorites: [FavoritePet]
}

type Pet {
	id: ID! @unique
	species: String
	name: String!
	age: Int
	breed: String
	gender: String
	image: String
	largeImage: String
	location: String
	shelter: String
	createdAt: DateTime!
	updatedAt: DateTime!
	user: User
}

type FavoritePet {
	id: ID! @unique
	pet: Pet
	user: User!
}
