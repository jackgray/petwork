enum Permission {
	ADMIN
	USER
	PETCREATE
	PETUPDATE
	PETDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String! @unique
	password: String
	permissions: [Permission]
	listings: [Pet] @relation(name: "UserCreatePetRelation")
	favorites: [Pet] @relation(name: "UserFavoriteRelation")
}

type Pet {
	id: ID! @unique
	species: String
	name: String!
	age: Int
	breed: String
	gender: String
	image: String
	largeImage: String
	location: String
	shelter: String
	createdAt: DateTime!
	updatedAt: DateTime!
	createdBy: User @relation(name: "UserCreatePetRelation")
	favoritedBy: User @relation(name: "UserFavoriteRelation")
}
